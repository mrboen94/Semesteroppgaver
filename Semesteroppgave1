public class pirate{
  public static void main(String[] args) {
    double iterations = 100000.00;
    double stepsAmount = 0;
    for (int i = 0; i < iterations; i++) {
      int xCoordinate = 5;
      int yCoordinate = 5;
      while (xCoordinate > 0 && xCoordinate <= 10 && yCoordinate > 0 && yCoordinate <= 10) {
        int direction = (int) (Math.random() * 5);
        switch (direction) {
          case 1:  direction = 0;
          stepsAmount++;
          xCoordinate ++;
          break;
          case 2:  direction = 1;
          stepsAmount++;
          xCoordinate --;
          break;
          case 3:  direction = 2;
          stepsAmount++;
          yCoordinate ++;
          break;
          case 4:  direction = 3;
          stepsAmount++;
          yCoordinate --;
          break;
        }
      }
    }
    System.out.println("Jack took " + stepsAmount/iterations + " steps");
  }
}





